<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_page"
    android:layout_height="match_parent"
    tools:context=".promo_models"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_content">
        <ImageView
            android:id="@+id/promoPict"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:src="@drawable/model_1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARRY OUTER BROWN"
                android:fontFamily="@font/mitr_regular"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pieces"
                android:textSize="12dp"
                android:fontFamily="@font/mitr_regular" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RP 199.000"
                android:fontFamily="@font/mitr_regular"
                android:textColor="#3E45AA" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RP 299.000"
                android:textSize="11dp"
                android:fontFamily="@font/mitr_regular"/>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_active">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_check"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Aktifkan"
                    android:fontFamily="@font/mitr_regular"
                    android:textSize="13dp"
                    android:textColor="#39C7A5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>